package Explicacion.model.envios;

public class EnvioEstandar extends Envio {
	
	private int diasEstimados;

	//CONSTRUCTOR -- 
	public EnvioEstandar(int codPedido, double pesoPedido, String origen, String destino, int diasEstimados) {
		super(codPedido, pesoPedido, origen, destino);
		this.diasEstimados = diasEstimados;
	}

	public EnvioEstandar() {
		super();
		
	}

	// GETTER AND SETTER --
	public int getDiasEstimados() {
		return diasEstimados;
	}

	public void setDiasEstimados(int diasEstimados) {
		this.diasEstimados = diasEstimados;
	}
	
	//METODOS -- 
	
	public double calcularCoste() {
		return (diasEstimados <=2)? 3+1.2*pesoPedido+2.5:3+1.2*pesoPedido;
	}
	
	
	
	

}
