package Ejer2Profe.Model.Figuras;

import Prueba1.ejemploEnum.DiaSemana;

import java.util.Scanner;

public enum TipoFigura {
    TRIANGULO, CIRCULO, CUADRADO;

    /* Al crear este tipo de "enum", donde es basicamente una clase donde sus variables solo puedes ser
       TRIÁNGULO, CÍRCULO O CUADRADO.
       Es como crear una variable pesonalizada, donde solo puede tener esos 3 valores.
    */
    static Scanner sc = new Scanner(System.in);
    public static TipoFigura leerTeclado(){

        String input = sc.nextLine();
        TipoFigura[] figuras = values();

        for(TipoFigura fig : figuras){
               if(fig.name().equalsIgnoreCase(input)){
                   return fig;
               }
           }

            return null;

    }

}
