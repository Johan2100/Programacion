package modelo2profesora;

import Explicacion.model.envios.EstadoEnvio;

public abstract class EnvioRasteable extends Envio {
	protected EstadoEnvio estado = EstadoEnvio.CREADO;

	public EnvioRasteable(int codPedido, double pesoPedido, String origen, String destino, modelo2profesora.EstadoEnvio estado2) {
		super(codPedido, pesoPedido, origen, destino);
		this.estado = estado2;
	}

	public EnvioRasteable() {
		super();
	}

	public EstadoEnvio getEstado() {
		return estado;
	}

	public void setEstado(EstadoEnvio estado) {
		this.estado = estado;
	}
	
	

	
	//MÃ‰TODOS --
	
	public abstract EstadoEnvio obtenerEstado();
		
	public abstract void actualizarEstado(modelo2profesora.EstadoEnvio nuevoEstado);
	
	

}
