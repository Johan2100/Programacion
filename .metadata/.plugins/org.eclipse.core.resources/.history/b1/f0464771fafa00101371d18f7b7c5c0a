package mainEnvios;


public class MainEnvio {
	public static void main(String[] args) {
		
		int op;
		do {
			System.out.println("""
					*** GESTIÓN ENVIOS ***

					1.
					2.
					0. Salir.


					""");

			System.out.println();
			op = sc.nextInt();
			sc.nextLine();

			switch (op) {
			case 1 -> {

			}
			case 2 -> {

			}

			case 0 -> {
				System.out.println("Saliendo...");
			}

			default -> System.out.println("Opción no válida");

			}

		} while (op != 0);
		
		
		
		
	}

}
