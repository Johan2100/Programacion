package modelo2profesora;

import Explicacion.Interfaz.Rasteables;
import Explicacion.model.envios.EstadoEnvio;

public class EnvioEstandar extends EnvioRasteable {
	
	private int diasEstimados;
	

	//CONSTRUCTOR -- 
	
	public EnvioEstandar(int codPedido, double pesoPedido, String origen, String destino,
			Explicacion.model.envios.EstadoEnvio estado, int diasEstimados) {
		
		super(codPedido, pesoPedido, origen, destino, estado);
		this.diasEstimados = diasEstimados;
	}
	

	
	
	public EnvioEstandar() {
		super();
		// TODO Auto-generated constructor stub
	}

	


	// GETTER AND SETTER --
	public int getDiasEstimados() {
		return diasEstimados;
	}

	

	public void setDiasEstimados(int diasEstimados) {
		this.diasEstimados = diasEstimados;
	}
	
	
	//METODOS -- 
	
	public double calcularCoste() {
		return (diasEstimados <=2)? 3+1.2*pesoPedido+2.5:3+1.2*pesoPedido;
	}


	@Override
	public EstadoEnvio obtenerEstado() {
		
		return estado;
	}


	@Override
	public void actualizarEstado(EstadoEnvio estado) {
		this.estado = estado;
		
	}

	
	
	
	
	

}
