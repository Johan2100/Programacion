package Ejer2Profe.Main;

import Ejer2Profe.Model.Figuras.Circulo;
import Ejer2Profe.Model.Figuras.Cuadrado;
import Ejer2Profe.Model.Figuras.FiguraGeometrica;
import Ejer2Profe.Model.Figuras.TipoFigura;
import Ejer2Profe.Model.Figuras.Triangulo;
import Ejer2Profe.Model.Manejadores.ManejadorFiguras;

import java.util.Scanner;

public class Main2 {
    static Scanner sc = new Scanner(System.in);
    public static void main(String[] args) {

        FiguraGeometrica[] figuras = new FiguraGeometrica[0];
        
        ManejadorFiguras manejador = new ManejadorFiguras(figuras);

        System.out.print("Cuantas figuras vas a querer: ");
        int num=sc.nextInt();
        sc.nextLine();
        do{
            TipoFigura tipoFigura;
            System.out.println("""
                    *** CREAR FIGURA ***
                    
                    - Circulo
                    - Triangulo
                    - Cuadrado
                    + FIN
                    """);
            do{
                tipoFigura = TipoFigura.leerTeclado();
            }while(tipoFigura == null);

            FiguraGeometrica fig = null;

            switch (tipoFigura){
                case TRIANGULO -> {
                    
                	FiguraGeometrica figT = addTriangulo();
                	System.out.println("Añadido triángulo....");

                }

                case CIRCULO -> {
                	
                	FiguraGeometrica figC = addCircle();
                   
                }
                case CUADRADO -> {
                	FiguraGeometrica figS = addSquare();
                	System.out.println("Añadiendo cuadrado....");
                   
                }
            } // switch

            addFigura(figuras,fig);
            num--;



        }while(num >= 0);

    }
    
    
    
    
    
    
    
    
    
    

    public static void addFigura(FiguraGeometrica[] figuras, FiguraGeometrica fig){


    }

    public static FiguraGeometrica addTriangulo(){
        System.out.print("Introduce nombre: ");
        String nombreT= sc.nextLine();
        int lado = 0;
        System.out.printf("Introduzca medida de lado %n: ",lado++);
        double lado1 = sc.nextInt();
        System.out.printf("Introduzca medida de lado %n: ",lado++);
        double lado2= sc.nextInt();
        System.out.printf("Introduzca medida de lado %n: ",lado);
        double lado3= sc.nextInt();
        return new Triangulo(nombreT, lado1, lado2, lado3);

    }
    
    public static FiguraGeometrica addSquare(){
    	System.out.println("Introduce nombre del cuadrado: ");
    	String nombreS = sc.nextLine();
    	
    	System.out.println("Introduce medida del lado: ");
    	double lado = sc.nextDouble();
    	
    	return new Cuadrado(nombreS, lado);
    }
    
    public static FiguraGeometrica addCircle() {
    	System.out.println("Introduce nombre: ");
    	String nombreC = sc.nextLine();
    	
    	System.out.println("Introduce radio del circulo: ");
    	double radio = sc.nextDouble();
    	
    	return new Circulo(nombreC,radio);
    }
}
