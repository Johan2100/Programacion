package Ejer3.model.manejador;

import java.util.Arrays;

import Ejer3.model.libros.Libro;
import Ejer3.model.libros.LibroNovela;
import Ejer3.model.libros.LibroTexto;

public class Biblioteca {
	
	Libro[] libros = new Libro[0];

	//CONSTRUCTOR -- 
	public Biblioteca(Libro[] libros) {
		super();
		this.libros = libros;
	}

	//GETTER AND SETTER -- 
	public Libro[] getLibros() {
		return libros;
	}

	public void setLibros(Libro[] libros) {
		this.libros = libros;
	}
	
	//ToString --

	@Override
	public String toString() {
		return "Biblioteca [libros=" + Arrays.toString(libros) + "]";
	}
	
	//MÃ‰TODOS --- 
	
	public void addBook(Libro b) {
		
		Libro[]aux = new Libro[libros.length+1];
		
		for (int i = 0; i < libros.length; i++) {
			aux[i] = libros[i];
		}
		aux[aux.length-1] = b;
		libros = aux;
		
	}
	
	
	public void conteoBook() {
		int numNovela = 0;
		int numTexto = 0;
		for(Libro s : libros) {
			if(s instanceof LibroNovela) {
				numNovela++;
				
			}else if(s instanceof LibroTexto) {
				numTexto++;
			}else {
				System.out.println("Tipo de libro no encontrado");
			}
		}
		
		
	}

}
