package Empleados;

public class Enfermero extends Empleados {
	
	TipoTurnos turno;
	
	//CONSTRUCTOR --
	
	public Enfermero(String nombre, String dNI, double salB, TipoTurnos turno) {
		super(nombre, dNI, salB);
		this.turno = turno;
	}
	
	
	
	// GETTER AND SETTER ---
	
	public TipoTurnos getTurno() {
		return turno;
	}

	public void setTurno(TipoTurnos turno) {
		this.turno = turno;
	}
	
	
	//ToString --
	
	@Override
	public String toString() {
		return "Enfermero [turno=" + turno + ", nombre=" + nombre + ", DNI=" + DNI + ", salB=" + salB + "]";
	}
	
	
	
	//MÃ‰TODOS -- 
	
	public double calcularSalario() {
		
		if(turno == TipoTurnos.Noche) {
			double porcentaje = (salB*20)/100; //1,20
			return salB+porcentaje;
		}
		
		return salB;
	}

	

	
	
	

	

}
