package modelo2profesora;

public abstract class Envio {
	protected int codPedido;
	protected double pesoPedido;
	protected String origen, destino;
	
	//CONSTRUCTOR -- 
	
	public Envio(int codPedido, double pesoPedido, String origen, String destino) {
		super();
		this.codPedido = codPedido;
		this.pesoPedido = pesoPedido;
		this.origen = origen;
		this.destino = destino;
	}
	public Envio() {
		super();
		
	}
	
	
	//GETTER AND SETTER ---
	public int getCodPedido() {
		return codPedido;
	}
	public void setCodPedido(int codPedido) {
		this.codPedido = codPedido;
	}
	public double getPesoPedido() {
		return pesoPedido;
	}
	public void setPesoPedido(double pesoPedido) {
		this.pesoPedido = pesoPedido;
	}
	public String getOrigen() {
		return origen;
	}
	public void setOrigen(String origen) {
		this.origen = origen;
	}
	public String getDestino() {
		return destino;
	}
	public void setDestino(String destino) {
		this.destino = destino;
	}
	
	//ToString -- 
	@Override
	public String toString() {
		return "Envio [codPedido=" + codPedido + ", pesoPedido=" + pesoPedido + ", origen=" + origen + ", destino="
				+ destino + "]";
	}
	
	
	public abstract double calcularCoste();
	
	
	

}
