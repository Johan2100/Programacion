package Hospital;


import java.util.Arrays;

import Empleados.Empleados;

public class Hospital {
	
	private String nombreH;
	private Empleados[] EmpleadosH = new Empleados[0];
	
	//CONSTRUCTOR--
	public Hospital(String nombreH, Empleados[] empleadosH) {
		super();
		this.nombreH = nombreH;
		EmpleadosH = empleadosH;
	}
	
	
	
	//ToString -- 
	
	@Override
	public String toString() {
		return "Hospital [nombreH=" + nombreH + ", EmpleadosH=" + Arrays.toString(EmpleadosH) + "]";
	}
	
	//MÃ‰TODOS ---
	
	

	public void agregarEmpleado(Empleados emp) {
		Empleados[] aux = new Empleados[EmpleadosH.length+1];
		
		for (int i = 0; i < EmpleadosH.length; i++) {
			
			aux[i] = EmpleadosH[i];
		}
		aux[aux.length-1]= emp;
		EmpleadosH = aux;
	}
	
	public double gastoTotal() {
		double sumaTotal = 0;
		for (int i = 0; i < EmpleadosH.length; i++) {
			sumaTotal+=EmpleadosH[i].calcularSalario();
		}
		
		return sumaTotal; 
		
	}
	
	public void mostrarEmpleados() {
		for (int i = 0; i < EmpleadosH.length; i++) {
			System.out.println(EmpleadosH[i].toString());
		}
	}


	
	
	

}
